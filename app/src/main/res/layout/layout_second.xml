<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/secondLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <TextView
        android:id="@+id/opt15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Gemini-1.5"
        android:textSize="14sp"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#CCC"/>

    <TextView
        android:id="@+id/opt20lite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Gemini-2.0-flash-lite"
        android:textSize="14sp"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#CCC"/>

    <TextView
        android:id="@+id/opt20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Gemini-2.0"
        android:textSize="14sp"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#CCC"/>

    <TextView
        android:id="@+id/opt25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Gemini-2.5-flash"
        android:textSize="14sp"/>
</LinearLayout>
