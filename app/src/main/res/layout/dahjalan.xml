<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/gradient">

    <!-- Tambahkan ConstraintLayout di dalam DrawerLayout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/bulat"
                android:layout_width="600dp"
                android:layout_height="600dp"
                android:layout_marginStart="-90dp"
                android:layout_marginTop="-270dp"
                android:background="@drawable/circle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="900dp"
                android:text="Halo!"
                android:textStyle="bold|italic" />


        </FrameLayout>



        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginBottom="1250dp"
            android:alpha="0.4"
            android:text="Versi Beta"
            android:textColor="@color/Baswara"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toTopOf="@id/bulat"
            app:layout_constraintEnd_toStartOf="@+id/frameLayout"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout" />


        <ImageView
            android:id="@+id/Button1"
            android:layout_width="115dp"
            android:layout_height="105dp"

            android:background="@drawable/tombol"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/topi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.54"
 />

        <ImageView
            android:id="@+id/mataluar"
            android:layout_width="229dp"
            android:layout_height="244dp"
            android:layout_marginTop="-230dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/vector_name"
            android:gravity="center_horizontal"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.44"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bulat" />

        <ImageView
            android:id="@+id/topi"
            android:layout_width="229dp"
            android:layout_height="244dp"
            android:layout_marginTop="-320dp"
            android:background="@drawable/vector_name"
            android:gravity="center_horizontal"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bulat" />

        <ImageView
            android:id="@+id/topi1"
            android:layout_width="229dp"
            android:layout_height="244dp"
            android:layout_marginTop="-318dp"
            android:background="@drawable/vector_name"
            android:gravity="center_horizontal"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.54"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bulat" />

        <ImageView
            android:id="@+id/matadalam"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/mata"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.54"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Button1"
            app:layout_constraintTop_toTopOf="@id/Button1" />

        <ImageView
            android:id="@+id/pupil"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginStart="238dp"
            android:layout_marginTop="-10dp"
            android:background="@drawable/pupil"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/matadalam" />

        <ImageView
            android:id="@+id/Layberenti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="360dp"
            android:background="@drawable/silangberenti"
            android:foregroundGravity="center"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/frameLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/judul" />

        <Button
            android:id="@+id/silang"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/baseline_highlight_off_24"

            app:layout_constraintTop_toTopOf="@id/Layberenti" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:alpha="0.5"
            android:fontFamily="@font/mont"
            android:text="Stop Notifikasi"
            android:textSize="20dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Layberenti" />

        <TextView
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-150dp"
            android:fontFamily="@font/mont"
            android:gravity="center_horizontal"
            android:text="Baswara"
            android:textColor="@color/Baswara"
            android:textSize="75dp"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/frameLayout"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/frameLayout"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.drawerlayout.widget.DrawerLayout>
