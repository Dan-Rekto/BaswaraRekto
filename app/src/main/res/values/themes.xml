<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Light theme tanpa ActionBar -->
    <style name="Theme.Worm" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary / toolbar, fab, ripple, dll -->
        <item name="colorPrimary">@color/Hijau_tua</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary jika butuh elemen accent tambahan -->
        <item name="colorSecondary">@color/Hijau_tua</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Default fill untuk MaterialButton -->
        <item name="colorButtonNormal">@color/Hijau_tua</item>
        <!-- Background & teks umum -->
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <!-- Dark theme tanpa ActionBar -->
    <style name="ThemeDark.Worm" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/Hijau_tua</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/Hijau_tua</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorButtonNormal">@color/Hijau_tua</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="ThemeOverlay.App.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialCircleRadius">16dp</item>
        <item name="materialAlertDialogBodyTextStyle">@color/white</item>
        <item name="android:divider">@null</item>
    </style>
</resources>
